// Export getStaticPaths to generate all blog post pages
export async function getStaticPaths() {
	// Define blog post slugs here so they're accessible to getStaticPaths
	const blogPostSlugs = [
		"local-seo-vs-national-seo-why-going-local-wins",
		"welcome-to-our-blog"
	];
	
	return blogPostSlugs.map((slug) => ({
		params: { slug },
	}));
}

// Get the slug from the URL
const { slug } = Astro.params;

// Get the post data
const post = blogPosts[slug || ''];

// If post doesn't exist, return 404
if (!post) {
	return Astro.redirect('/blog');
}

// Format date helper
function formatDate(date: Date): string {
	return new Intl.DateTimeFormat('en-US', { 
		year: 'numeric', 
		month: 'long', 
		day: 'numeric' 
	}).format(date);
}

// SEO & Page Info
const pageTitle = `${post.title} | Glassbee Solutions Blog`;
const pageDescription = post.metaDescription || post.excerpt;

