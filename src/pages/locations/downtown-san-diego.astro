---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import TrustSignals from '../../components/TrustSignals.astro';
import RelatedPages from '../../components/RelatedPages.astro';
import FAQ from '../../components/FAQ.astro';
import CTABanner from '../../components/CTABanner.astro';

// SEO & Page Info
const pageTitle = "Downtown San Diego SEO Experts — Visibility That Wins Clients | Glassbee Solutions";
const pageDescription = "Dominate local search in Downtown San Diego. SEO for law firms, restaurants, real estate & home services. AI-driven strategy + hyper-local targeting.";

// Schema Markup
const schemaMarkup = {
	"@context": "https://schema.org",
	"@type": "ProfessionalService",
	"name": "Glassbee Solutions - Downtown San Diego SEO",
	"description": "Professional SEO and digital marketing services for Downtown San Diego businesses",
	"url": "https://glassbee.solutions/locations/downtown-san-diego",
	"telephone": "+1-(619) 273-3218",
	"address": {
		"@type": "PostalAddress",
		"addressLocality": "Downtown San Diego",
		"addressRegion": "CA",
		"addressCountry": "US"
	},
	"areaServed": [
		"Downtown San Diego",
		"Gaslamp Quarter",
		"Little Italy",
		"East Village",
		"Marina District",
		"Cortez Hill",
		"Columbia",
		"Seaport Village"
	],
	"serviceArea": {
		"@type": "GeoCircle",
		"geoMidpoint": {
			"@type": "GeoCoordinates",
			"latitude": "32.7157",
			"longitude": "-117.1611"
		}
	}
};

// Hero Section
const hero = {
	title: "Downtown San Diego SEO Experts — Visibility",
	titleHighlight: "That Wins Clients",
	description: "Grow Your Business in San Diego's Most Competitive Market",
	backgroundImage: "https://images.unsplash.com/photo-1580655653885-65763b2597d0?w=1920",
	primaryButton: {
		text: "Get Free SEO Audit",
		link: "/contact"
	},
	secondaryButton: {
		text: "Our Services",
		link: "/services"
	}
};

// Trust Signals Stats
const trustStats = [
	{ value: "50+", label: "Downtown Businesses", icon: "properties" },
	{ value: "200%", label: "Growth in Calls & Traffic", icon: "revenue" },
	{ value: "Top 3", label: "Google Map Pack Placement", icon: "occupancy" },
	{ value: "24hr", label: "Average Response Time", icon: "rating" }
];

// About Section (Two Column Layout)
const aboutSection = {
	title: "Downtown San Diego SEO Experts",
	titleHighlight: "— Visibility That Wins Clients",
	leftColumn: {
		heading: "Dominate San Diego's Most Competitive Market",
		description: "At Glassbee Solutions, we help Downtown San Diego businesses dominate local search and capture more high-intent leads. Whether you're a law firm in East Village, a real estate office in Little Italy, or a restaurant in the Gaslamp Quarter, our Downtown San Diego SEO services are designed to help you rise to the top of Google and stay there.",
		bullets: [
			"Hyper-Local Targeting: Built using real Downtown San Diego search data and competitor analysis",
			"AI-Driven Strategy: Machine learning blended with expert insight to target high-intent customers",
			"Full Optimization: Google Business, backlinks, on-page content, and citations — we handle it all",
			"Results-Driven Growth: Real, measurable traction in calls, leads, and organic visibility",
			"60-Day Money-Back Guarantee: Our proven 45-day system delivers results. If you don't see measurable growth within 60 days, we'll refund every penny"
		]
	},
	rightColumn: {
		heading: "The Downtown San Diego SEO Landscape",
		description: "Downtown businesses face some of the toughest competition in Southern California. Big firms dominate ads — but with the right SEO, you can outrank them organically and capture local leads without the ad spend.",
		revenueSeasons: [
			{ season: "Growth in Calls & Traffic", price: "+200%", occupancy: "Within 30-60 days" },
			{ season: "Google Map Pack", price: "Top 3 Placement", occupancy: "Industry keywords" },
			{ season: "Expanded Visibility", price: "All Districts", occupancy: "East Village to Marina" }
		]
	}
};

// Black Box Section (Service Areas)
const serviceAreas = {
	title: "Local Service Areas",
	titleHighlight: "We Cover",
	items: [
		{
			heading: "Gaslamp Quarter",
			description: "Restaurants, hospitality, nightlife — the heart of Downtown San Diego"
		},
		{
			heading: "Little Italy & East Village",
			description: "Real estate, med spas, creative firms, and professional services"
		},
		{
			heading: "Marina District & Cortez Hill",
			description: "Professional services, home improvement, and waterfront businesses"
		},
		{
			heading: "Columbia & Seaport Village",
			description: "Retail, tourism, and coastal service businesses"
		}
	]
};

// Local Insights Section
const localInsights = {
	title: "Local Insights &",
	titleHighlight: "Seasonal Search Trends",
	description: "Downtown search behavior changes with events, tourism, and local development. Our adaptive SEO strategy ensures you stay relevant and competitive through every season.",
	trends: [
		"Event-driven surges (Comic-Con, Padres games, and conventions)",
		"High-value service terms (law, real estate, contracting, med spa SEO)",
		"Tourist & hospitality keywords for hotels, restaurants, and attractions"
	]
};

// Industries We Serve
const industries = [
	{
		heading: "Law Firms & Professional Services",
		description: "From East Village to Cortez Hill, we help law firms, consultants, and real estate professionals dominate high-value local search terms."
	},
	{
		heading: "Restaurants & Hospitality",
		description: "Gaslamp Quarter and Little Italy have some of San Diego's most competitive dining scenes. We help you show up when locals and tourists search."
	},
	{
		heading: "Home Services & Contractors",
		description: "Whether it's HVAC, plumbing, or construction, Downtown property owners search locally first. We make sure you're found."
	},
	{
		heading: "Med Spas & Wellness Clinics",
		description: "From skincare to wellness services, we help you attract high-intent local clients searching for Downtown San Diego providers."
	}
];

// Related Pages
const relatedPages = [
	{
		title: "Local SEO for San Diego Businesses",
		description: "Complete SEO management for your business",
		link: "/services/local-seo-for-san-diego-businesses",
		icon: "services"
	},
	{
		title: "Google Business SEO",
		description: "GBP optimization and management services",
		link: "/services/google-business-seo",
		icon: "services"
	},
	{
		title: "Contact Us",
		description: "Get your free SEO audit",
		link: "/contact",
		icon: "contact"
	}
];

// Nearby Locations
const nearbyLocations = [
	{ name: "Little Italy", description: "SEO for Little Italy businesses", href: "/locations/little-italy" },
	{ name: "Gaslamp Quarter", description: "SEO for Gaslamp Quarter businesses", href: "/locations/gaslamp-quarter" },
	{ name: "East Village", description: "SEO for East Village businesses", href: "/locations/east-village" },
	{ name: "Hillcrest", description: "SEO for Hillcrest businesses", href: "/locations/hillcrest" }
];

// FAQ Section
const faqs = [
	{
		question: "Why do Downtown San Diego businesses need SEO?",
		answer: "Downtown is San Diego's most competitive market. Big firms dominate paid ads, but with the right SEO strategy, you can outrank them organically and capture local leads without the ad spend. If you're not ranking in the top 3 for neighborhood-specific searches, you're losing business to competitors who are."
	},
	{
		question: "How long does it take to see results?",
		answer: "Most Downtown businesses see improvements in local rankings within 30-60 days. Full results — top 3 rankings, consistent leads, and +200% growth in calls and web traffic — typically show within 90 days."
	},
	{
		question: "What industries do you work with Downtown?",
		answer: "We specialize in law firms, real estate, restaurants, hospitality, home services, med spas, and creative agencies. Downtown has unique search patterns based on events, tourism, and professional services — we know how to dominate them."
	},
	{
		question: "Do you work with businesses outside of Downtown?",
		answer: "Yes — we serve businesses across San Diego, from Carlsbad to Coronado. But we tailor every strategy to your specific neighborhood and audience."
	},
	{
		question: "What makes your SEO different?",
		answer: "We don't use templates or generic strategies. Every campaign is built on real Downtown San Diego search data, competitor analysis, and neighborhood-specific buyer behavior. We focus on rankings that drive revenue — not vanity metrics."
	}
];

// CTA Banner
const ctaBanner = {
	title: "Start Ranking in Downtown San Diego Today",
	subtitle: "Book your free SEO audit — we'll show you exactly how to outrank competitors and turn search visibility into consistent business growth",
	primaryButton: {
		text: "Get Free SEO Audit",
		link: "/contact"
	},
	secondaryButton: {
		text: "Call (619) 273-3218",
		link: "tel:+16192733218"
	}
};
---

<Layout title={pageTitle} description={pageDescription}>
	<script type="application/ld+json" set:html={JSON.stringify(schemaMarkup)} />

	<Header />

	<!-- Hero Section -->
	<section class="relative min-h-[70vh] flex items-center bg-cover bg-center"
		style={`background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('${hero.backgroundImage}');`}>
		<div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<div class="max-w-4xl">
				<h1 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
					{hero.title}<br/><span class="text-orange-600">{hero.titleHighlight}</span>
				</h1>
				<div class="w-24 h-1 bg-orange-600 mb-8"></div>
				<p class="text-xl md:text-2xl text-gray-200 mb-12 leading-relaxed">
					{hero.description}
				</p>
				<div class="flex flex-wrap gap-4">
					<a href={hero.primaryButton.link} class="btn-primary px-8 py-4 text-lg font-bold uppercase tracking-wider border-2 transition-all hover:bg-white hover:text-orange-600">
						{hero.primaryButton.text}
					</a>
					<a href={hero.secondaryButton.link} class="bg-transparent border-2 border-white text-white px-8 py-4 text-lg font-bold uppercase tracking-wider transition-all hover:bg-white hover:text-black">
						{hero.secondaryButton.text}
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Trust Signals -->
	<TrustSignals stats={trustStats} />

	<!-- About Section -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-16">
					<h2 class="text-5xl md:text-6xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
						{aboutSection.title}
					</h2>
					<div class="w-24 h-1 bg-orange-600 mx-auto mb-4"></div>
					{aboutSection.titleHighlight && (
						<p class="text-2xl md:text-3xl font-bold text-orange-600 uppercase mt-6" style="font-family: 'Bebas Neue', sans-serif;">
							{aboutSection.titleHighlight}
						</p>
					)}
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
					<!-- Left Column -->
					<div>
						<h3 class="text-3xl font-bold text-black mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{aboutSection.leftColumn.heading}</h3>
						<p class="text-gray-600 mb-4 leading-relaxed">
							{aboutSection.leftColumn.description}
						</p>
						<ul class="space-y-3">
							{aboutSection.leftColumn.bullets.map((bullet) => (
								<li class="flex items-start gap-3">
									<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700">{bullet}</span>
								</li>
							))}
						</ul>
					</div>

					<!-- Right Column -->
					<div>
						<h3 class="text-3xl font-bold text-black mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{aboutSection.rightColumn.heading}</h3>
						<p class="text-gray-600 mb-4 leading-relaxed">
							{aboutSection.rightColumn.description}
						</p>
						<div class="space-y-4">
							{aboutSection.rightColumn.revenueSeasons.map((season) => (
								<div class="bg-gray-50 p-4 border-l-4 border-orange-600">
									<p class="font-bold text-black mb-1">{season.season}</p>
									<p class="text-gray-600 text-sm">{season.price} | {season.occupancy}</p>
								</div>
							))}
						</div>
					</div>
				</div>

				<!-- Service Areas Section -->
				<div class="bg-black text-white p-12 mb-16">
					<h3 class="text-4xl font-bold mb-8 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						{serviceAreas.title}<br/><span class="text-orange-600">{serviceAreas.titleHighlight}</span>
					</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						{serviceAreas.items.map((item) => (
							<div>
								<h4 class="text-xl font-bold mb-3 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{item.heading}</h4>
								<p class="text-gray-300 text-sm">{item.description}</p>
							</div>
						))}
					</div>
				</div>

				<!-- Local Insights Section -->
				<div class="mb-16">
					<h3 class="text-4xl font-bold text-black mb-8 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						{localInsights.title}<br/><span class="text-orange-600">{localInsights.titleHighlight}</span>
					</h3>
					<p class="text-gray-600 mb-6 text-center max-w-3xl mx-auto">
						{localInsights.description}
					</p>
					<div class="bg-gray-50 p-8 max-w-3xl mx-auto">
						<p class="font-bold text-black mb-4">We optimize around:</p>
						<ul class="space-y-3">
							{localInsights.trends.map((trend) => (
								<li class="flex items-start gap-3">
									<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700">{trend}</span>
								</li>
							))}
						</ul>
						<p class="text-gray-600 mt-6 italic">Your campaign adjusts in real time — so your business never falls behind the trend.</p>
					</div>
				</div>

				<!-- Comparison Table -->
				<div class="mb-16">
					<h3 class="text-4xl font-bold text-black mb-8 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						How Glassbee Solutions<br/><span class="text-orange-600">Compares</span>
					</h3>
					<div class="overflow-x-auto">
						<table class="w-full border-collapse">
							<thead>
								<tr class="bg-black text-white">
									<th class="px-6 py-4 text-left font-bold uppercase" style="font-family: 'Bebas Neue', sans-serif;">Feature</th>
									<th class="px-6 py-4 text-center font-bold uppercase" style="font-family: 'Bebas Neue', sans-serif;">Glassbee Solutions</th>
									<th class="px-6 py-4 text-center font-bold uppercase" style="font-family: 'Bebas Neue', sans-serif;">Typical SEO Agency</th>
								</tr>
							</thead>
							<tbody>
								<tr class="border-b">
									<td class="px-6 py-4 font-bold">Hyper-Local Precision</td>
									<td class="px-6 py-4 text-center text-sm">Built on real Downtown San Diego search data and competitor analysis</td>
									<td class="px-6 py-4 text-center text-gray-400">Generalized regional targeting</td>
								</tr>
								<tr class="border-b bg-gray-50">
									<td class="px-6 py-4 font-bold">Data + AI Strategy</td>
									<td class="px-6 py-4 text-center text-sm">Combines machine learning insights with human optimization</td>
									<td class="px-6 py-4 text-center text-gray-400">One-size-fits-all templates</td>
								</tr>
								<tr class="border-b">
									<td class="px-6 py-4 font-bold">Full Optimization</td>
									<td class="px-6 py-4 text-center text-sm">On-page, off-page, citations, and Google Business handled for you</td>
									<td class="px-6 py-4 text-center text-gray-400">Partial implementation</td>
								</tr>
								<tr class="border-b bg-gray-50">
									<td class="px-6 py-4 font-bold">Results-Driven Focus</td>
									<td class="px-6 py-4 text-center text-sm">+200% growth in calls & web traffic, tracked transparently</td>
									<td class="px-6 py-4 text-center text-gray-400">Vanity metrics and impressions</td>
								</tr>
								<tr class="border-b">
									<td class="px-6 py-4 font-bold">True Partnership</td>
									<td class="px-6 py-4 text-center text-sm">Direct communication, transparent progress, real accountability</td>
									<td class="px-6 py-4 text-center text-gray-400">Automated monthly reports only</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>

				<!-- Industries Cards -->
				<div class="mb-16">
					<h3 class="text-4xl font-bold text-black mb-8 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						Industries<br/><span class="text-orange-600">We Serve</span>
					</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						{industries.map((card) => (
							<div class="card p-8">
								<h4 class="text-2xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{card.heading}</h4>
								<p class="text-gray-600 mb-4">{card.description}</p>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Related Services -->
	<RelatedPages
		title="Services"
		pages={relatedPages}
	/>

	<!-- Nearby Locations -->
	{nearbyLocations && nearbyLocations.length > 0 && (
		<section class="py-20 bg-gray-50">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-4xl md:text-5xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
						We Also Serve<br/><span class="text-orange-600">Nearby Communities</span>
					</h2>
					<div class="w-24 h-1 bg-orange-600 mx-auto"></div>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
					{nearbyLocations.map((location) => (
						<a href={location.href} class="card p-6 hover:border-orange-600 transition-all group">
							<h3 class="text-xl font-bold text-black mb-2 uppercase group-hover:text-orange-600" style="font-family: 'Bebas Neue', sans-serif;">{location.name}</h3>
							<p class="text-gray-600 text-sm">{location.description}</p>
						</a>
					))}
				</div>
			</div>
		</section>
	)}

	<!-- FAQ Section -->
	<FAQ
		title="Frequently Asked Questions"
		subtitle="Common questions"
		faqs={faqs}
	/>

	<!-- CTA Banner -->
	<CTABanner
		backgroundColor="orange"
		title={ctaBanner.title}
		subtitle={ctaBanner.subtitle}
		primaryButtonText={ctaBanner.primaryButton.text}
		primaryButtonLink={ctaBanner.primaryButton.link}
		secondaryButtonText={ctaBanner.secondaryButton.text}
		secondaryButtonLink={ctaBanner.secondaryButton.link}
	/>

	<Footer />
</Layout>
