// CTA Banner
const ctaBanner = {
	title: "Start Ranking in Coronado Today",
	subtitle: "Let's make your business the one locals and visitors see first. üìç Serving Coronado, Downtown San Diego, and the greater coastal area.",
	primaryButton: {
		text: "Book Free SEO Audit",
		link: "/contact"
	},
	secondaryButton: {
