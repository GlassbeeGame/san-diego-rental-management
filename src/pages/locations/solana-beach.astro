---

<Layout title={pageTitle} description={pageDescription}>
	<!-- Schema Markup -->
	<script type="application/ld+json" set:html={JSON.stringify(schemaMarkup)} />

	<Header />

	<!-- Hero Section -->
	<section class="relative min-h-[70vh] flex items-center bg-cover bg-center"
		style={`background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('${hero.backgroundImage}');`}>
		<div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<div class="max-w-4xl">
				<h1 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
					{hero.title}<br/><span class="text-orange-600">{hero.titleHighlight}</span>
				</h1>
				<div class="w-24 h-1 bg-orange-600 mb-8"></div>
				<p class="text-xl md:text-2xl text-gray-200 mb-12 leading-relaxed">
					{hero.description}
				</p>
				<div class="flex flex-wrap gap-4">
					<a href={hero.primaryButton.link} class="btn-primary px-8 py-4 text-lg font-bold uppercase tracking-wider border-2 transition-all hover:bg-white hover:text-orange-600">
						{hero.primaryButton.text}
					</a>
					<a href={hero.secondaryButton.link} class="bg-transparent border-2 border-white text-white px-8 py-4 text-lg font-bold uppercase tracking-wider transition-all hover:bg-white hover:text-black">
						{hero.secondaryButton.text}
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Trust Signals -->
	<TrustSignals stats={trustStats} />

	<!-- About Section -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-16">
					<h2 class="text-5xl md:text-6xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
						{aboutSection.title}<br/><span class="text-orange-600">{aboutSection.titleHighlight}</span>
					</h2>
					<div class="w-24 h-1 bg-orange-600 mx-auto mb-6"></div>
					<p class="text-xl text-gray-600 max-w-3xl mx-auto">
						At Glassbee Solutions, we help Solana Beach businesses go from hidden to high-performing. Whether you're a contractor, med spa, restaurant, or boutique on Cedros Avenue, our Solana Beach SEO services are built to generate consistent calls, traffic, and loyal customers.
					</p>
					<p class="text-lg text-gray-600 max-w-3xl mx-auto mt-4">
						We use real search data, advanced AI optimization, and full-service local SEO management to make your business the one people find first ‚Äî and trust the most.
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
					<!-- Left Column -->
					<div>
						<h3 class="text-3xl font-bold text-black mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{aboutSection.leftColumn.heading}</h3>
						<p class="text-gray-600 mb-6 leading-relaxed">
							{aboutSection.leftColumn.description}
						</p>
						<ul class="space-y-4">
							{aboutSection.leftColumn.bullets.map((bullet) => (
								<li class="flex items-start gap-3">
									<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700">{bullet}</span>
								</li>
							))}
						</ul>
					</div>

					<!-- Right Column -->
					<div>
						<h3 class="text-3xl font-bold text-black mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{aboutSection.rightColumn.heading}</h3>
						<p class="text-gray-600 mb-6 leading-relaxed">
							{aboutSection.rightColumn.description}
						</p>
						<div class="space-y-4">
							{aboutSection.rightColumn.revenueSeasons.map((season) => (
								<div class="bg-gray-50 p-4 border-l-4 border-orange-600">
									<p class="font-bold text-black mb-1">{season.season}</p>
									<p class="text-gray-600 text-sm">{season.price} | {season.occupancy}</p>
								</div>
							))}
						</div>
					</div>
				</div>

				<!-- Black Box Section -->
				<div class="bg-black text-white p-12 mb-16">
					<h3 class="text-4xl font-bold mb-8 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						{blackBoxSection.title}<br/><span class="text-orange-600">{blackBoxSection.titleHighlight}</span>
					</h3>
					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						{blackBoxSection.items.map((item) => (
							<div>
								<h4 class="text-xl font-bold mb-3 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{item.heading}</h4>
								<p class="text-gray-300 text-sm">{item.description}</p>
							</div>
						))}
					</div>
				</div>

				<!-- Driving Directions -->
				<div class="mb-16">
					<h3 class="text-4xl font-bold text-black mb-6 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						Driving Directions &<br/><span class="text-orange-600">Local Meetings</span>
					</h3>
					<div class="card p-8">
						<p class="text-gray-600 text-lg leading-relaxed">
							We often meet clients near Cedros Avenue, Lomas Santa Fe Drive, and the Solana Beach Train Station. Whether you're in Del Mar or Encinitas, we're a few minutes away ‚Äî or available instantly via remote meeting.
						</p>
					</div>
				</div>

				<!-- Local Insights -->
				<div class="mb-16">
					<h3 class="text-4xl font-bold text-black mb-6 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						Local Insights &<br/><span class="text-orange-600">Seasonal Search Trends</span>
					</h3>
					<div class="card p-8">
						<p class="text-gray-600 text-lg leading-relaxed mb-4">
							Solana Beach's economy runs on both locals and visitors ‚Äî meaning search behavior shifts with the seasons. We tailor your campaigns to capture attention year-round:
						</p>
						<ul class="space-y-3">
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								<span class="text-gray-700">Tourism Peaks: Optimizing for "best restaurants," "shops," and "things to do in Solana Beach"</span>
							</li>
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								<span class="text-gray-700">Home-Service Demand: Seasonal maintenance keywords like "roofing," "window cleaning," and "landscaping near me"</span>
							</li>
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								<span class="text-gray-700">Lifestyle Growth: Med spas, salons, and fitness studios see recurring search surges ‚Äî we make sure you appear first</span>
							</li>
						</ul>
					</div>
				</div>

				<!-- Expertise Cards -->
				<div class="mb-16">
					<h3 class="text-4xl font-bold text-black mb-8 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						Industries<br/><span class="text-orange-600">We Serve</span>
					</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						{expertiseCards.map((card) => (
							<div class="card p-8">
								<h4 class="text-2xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{card.heading}</h4>
								<p class="text-gray-600 mb-4">{card.description}</p>
							</div>
						))}
					</div>
				</div>

				<!-- Comparison Table -->
				<div class="mb-16">
					<h3 class="text-4xl font-bold text-black mb-8 uppercase text-center" style="font-family: 'Bebas Neue', sans-serif;">
						How Glassbee Solutions<br/><span class="text-orange-600">Stands Apart</span>
					</h3>
					<div class="overflow-x-auto">
						<table class="w-full card">
							<thead class="bg-gray-50">
								<tr>
									<th class="px-6 py-4 text-left font-bold text-black">Feature</th>
									<th class="px-6 py-4 text-center font-bold text-orange-600">Glassbee Solutions</th>
									<th class="px-6 py-4 text-center font-bold text-gray-600">Typical SEO Agency</th>
								</tr>
							</thead>
							<tbody class="divide-y divide-gray-200">
								<tr>
									<td class="px-6 py-4 text-gray-700">Hyper-Local Precision</td>
									<td class="px-6 py-4 text-center text-sm">Built on real Solana Beach search data and competitor analysis</td>
									<td class="px-6 py-4 text-center text-gray-500 text-sm">Generalized San Diego targeting</td>
								</tr>
								<tr class="bg-gray-50">
									<td class="px-6 py-4 text-gray-700">Data + AI Strategy</td>
									<td class="px-6 py-4 text-center text-sm">Combines machine learning insights with human optimization</td>
									<td class="px-6 py-4 text-center text-gray-500 text-sm">One-size-fits-all templates</td>
								</tr>
								<tr>
									<td class="px-6 py-4 text-gray-700">Full Optimization</td>
									<td class="px-6 py-4 text-center text-sm">On-page, off-page, citations, and Google Business handled for you</td>
									<td class="px-6 py-4 text-center text-gray-500 text-sm">Partial implementation</td>
								</tr>
								<tr class="bg-gray-50">
									<td class="px-6 py-4 text-gray-700">Results-Driven Focus</td>
									<td class="px-6 py-4 text-center text-sm">+200% growth in calls & web traffic, tracked transparently</td>
									<td class="px-6 py-4 text-center text-gray-500 text-sm">Vanity metrics and impressions</td>
								</tr>
								<tr>
									<td class="px-6 py-4 text-gray-700">True Partnership</td>
									<td class="px-6 py-4 text-center text-sm">Direct communication, transparent progress, real accountability</td>
									<td class="px-6 py-4 text-center text-gray-500 text-sm">Automated monthly reports only</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Related Services -->
	<RelatedPages
		title="Related Services"
		pages={relatedPages}
	/>

	<!-- Nearby Locations -->
	{nearbyLocations && nearbyLocations.length > 0 && (
		<section class="py-20 bg-gray-50">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-4xl md:text-5xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
						We Also Serve<br/><span class="text-orange-600">Nearby Communities</span>
					</h2>
					<div class="w-24 h-1 bg-orange-600 mx-auto"></div>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
					{nearbyLocations.map((location) => (
						<a href={location.href} class="card p-6 hover:border-orange-600 transition-all group">
							<h3 class="text-xl font-bold text-black mb-2 uppercase group-hover:text-orange-600" style="font-family: 'Bebas Neue', sans-serif;">{location.name}</h3>
							<p class="text-gray-600 text-sm">{location.description}</p>
						</a>
					))}
				</div>
			</div>
		</section>
	)}

	<!-- FAQ Section -->
	<FAQ
		title="Frequently Asked Questions"
		subtitle="About Solana Beach SEO"
		faqs={faqs}
	/>

	<!-- CTA Banner -->
	<CTABanner
		backgroundColor="orange"
		title={ctaBanner.title}
		subtitle={ctaBanner.subtitle}
		primaryButtonText={ctaBanner.primaryButton.text}
		primaryButtonLink={ctaBanner.primaryButton.link}
		secondaryButtonText={ctaBanner.secondaryButton.text}
		secondaryButtonLink={ctaBanner.secondaryButton.link}
	/>

	<Footer />
</Layout>
