	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
					Service<br/><span class="text-orange-600">Area</span>
				</h2>
				<div class="w-24 h-1 bg-orange-600 mx-auto mb-6"></div>
				<p class="text-base md:text-lg text-gray-600 max-w-3xl mx-auto mb-12">
					Based in San Diego, we handle national rebuilds remotely with the same code-first workflow
				</p>
			</div>

			<div class="max-w-5xl mx-auto">
				<!-- Location Grid -->
				<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
					{serviceAreas.map((area) => (
						<div class="card p-6 text-center hover:shadow-lg transition-shadow">
							<svg class="w-8 h-8 text-orange-600 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
							</svg>
							<p class="font-bold text-black text-sm md:text-base">{area}</p>
						</div>
					))}
				</div>
			</div>
		</div>
	</section>

	<!-- Related Services -->
	<RelatedPages
		title="Related Services"
		pages={relatedServices}
	/>

	<!-- FAQ Section -->
	<FAQ
		title="Frequently Asked Questions"
		subtitle="Everything you need to know about our code rebuilds"
		faqs={faqs}
	/>

	<!-- CTA Banner -->
	<CTABanner
		backgroundColor={ctaBanner.backgroundColor}
		title={ctaBanner.title}
		subtitle={ctaBanner.subtitle}
		primaryButtonText={ctaBanner.primaryButton.text}
		primaryButtonLink={ctaBanner.primaryButton.link}
		secondaryButtonText={ctaBanner.secondaryButton.text}
		secondaryButtonLink={ctaBanner.secondaryButton.link}
	/>

	<Footer />
</Layout>
