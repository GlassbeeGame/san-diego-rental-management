---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
	title="Contact Us | Polaris Rental Group"
	description="Get in touch for a free consultation and property evaluation. Call (951) 760-0070 or fill out our contact form."
>
	<Header />

	<!-- Hero Contact Section with Background Image -->
	<section class="relative min-h-screen flex items-center bg-cover bg-center" style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=1920'); background-attachment: fixed;">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-32">
			<div class="max-w-6xl mx-auto">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<!-- Left Side - Hero Text -->
					<div class="text-white">
						<h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-8 uppercase leading-tight" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
							Get Your Free<br/>
							<span class="text-orange-600">Rental Management Quote</span>
						</h1>
						<p class="text-xl md:text-2xl text-gray-300 mb-10 leading-relaxed">
							Call Polaris Rental Group at <a href="tel:+19517600070" class="text-orange-600 font-bold hover:text-orange-500">(951) 760-0070</a><br/>
							or fill out our service request form.
						</p>
						<p class="text-lg text-gray-400">
							We're ready to help anywhere in San Diego, from La Jolla to the Gaslamp Quarter.
						</p>
					</div>

					<!-- Right Side - Contact Form -->
					<div class="bg-white p-8 md:p-10 shadow-2xl">
						<h2 class="text-3xl font-bold text-gray-900 mb-2 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
							Request a Consultation
						</h2>
						<p class="text-sm text-gray-600 mb-8">No obligation • 100% free quote • Same-day response available</p>
						
						<form class="space-y-5" id="contact-form">
							<div>
								<input
									type="text"
									id="name"
									name="name"
									required
									class="w-full px-4 py-3 border-2 border-gray-300 focus:border-orange-600 outline-none transition text-gray-900 placeholder-gray-500"
									placeholder="Your Name *"
								/>
							</div>

							<div>
								<input
									type="tel"
									id="phone"
									name="phone"
									required
									class="w-full px-4 py-3 border-2 border-gray-300 focus:border-orange-600 outline-none transition text-gray-900 placeholder-gray-500"
									placeholder="Phone Number *"
								/>
							</div>

							<div>
								<input
									type="email"
									id="email"
									name="email"
									class="w-full px-4 py-3 border-2 border-gray-300 focus:border-orange-600 outline-none transition text-gray-900 placeholder-gray-500"
									placeholder="Email Address (Optional)"
								/>
							</div>

							<div>
								<select
									id="service"
									name="service"
									class="w-full px-4 py-3 border-2 border-gray-300 focus:border-orange-600 outline-none transition text-gray-900"
								>
									<option value="">Select a service</option>
									<option value="full-management">Full Property Management</option>
									<option value="pricing">Pricing Strategy Only</option>
									<option value="maintenance">Maintenance & Cleaning</option>
									<option value="guest-services">Guest Services</option>
									<option value="consultation">Free Consultation</option>
								</select>
							</div>

							<div>
								<textarea
									id="message"
									name="message"
									rows="4"
									class="w-full px-4 py-3 border-2 border-gray-300 focus:border-orange-600 outline-none transition text-gray-900 placeholder-gray-500 resize-none"
									placeholder="Tell us about your property and management needs..."
								></textarea>
							</div>

							<button
								type="submit"
								class="w-full btn btn-primary px-8 py-4 text-base font-bold"
							>
								Get Free Quote Now
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Quick Contact Info Bar -->
	<section class="py-12 bg-black text-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
				<div>
					<div class="inline-flex items-center justify-center w-16 h-16 bg-orange-600 mb-4">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
						</svg>
					</div>
					<h3 class="text-lg font-bold mb-2 uppercase" style="font-family: 'Bebas Neue', sans-serif;">Call Us</h3>
					<a href="tel:+19517600070" class="text-orange-600 text-xl font-bold hover:text-orange-500">(951) 760-0070</a>
				</div>

				<div>
					<div class="inline-flex items-center justify-center w-16 h-16 bg-orange-600 mb-4">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
					</div>
					<h3 class="text-lg font-bold mb-2 uppercase" style="font-family: 'Bebas Neue', sans-serif;">Email Us</h3>
					<a href="mailto:info@polarisrentalgroup.com" class="text-orange-600 text-lg font-semibold hover:text-orange-500">info@polarisrentalgroup.com</a>
				</div>

				<div>
					<div class="inline-flex items-center justify-center w-16 h-16 bg-orange-600 mb-4">
						<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
							<path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
						</svg>
					</div>
					<h3 class="text-lg font-bold mb-2 uppercase" style="font-family: 'Bebas Neue', sans-serif;">Service Area</h3>
					<p class="text-gray-300">Greater San Diego Area</p>
				</div>
			</div>
		</div>
	</section>

	<Footer />
</Layout>

<script>
	const form = document.getElementById('contact-form');
	form?.addEventListener('submit', (e) => {
		e.preventDefault();
		alert('Thank you! We will contact you shortly.');
		form.reset();
	});
</script>
