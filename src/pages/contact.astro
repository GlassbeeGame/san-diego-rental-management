---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
	title="Contact Us | San Diego Rental Management"
	description="Get in touch for a free consultation and property evaluation. Call (951) 760-0070 or fill out our contact form to start maximizing your rental income."
>
	<Header />

	<!-- Hero Section -->
	<section class="pt-24 md:pt-32 pb-12 md:pb-16 bg-gradient-to-br from-blue-50 to-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Let's Maximize Your Rental Income
				</h1>
				<p class="text-xl text-gray-600">
					Get a free consultation and personalized property evaluation. We'll show you exactly how much more you could be earning.
				</p>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section class="py-16 md:py-24 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-6xl mx-auto">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
					<!-- Contact Form -->
					<div>
						<div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-200">
							<h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
							<form class="space-y-6" id="contact-form">
								<div>
									<label for="name" class="block text-sm font-medium text-gray-700 mb-2">
										Full Name *
									</label>
									<input
										type="text"
										id="name"
										name="name"
										required
										class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition"
										placeholder="John Doe"
									/>
								</div>

								<div>
									<label for="email" class="block text-sm font-medium text-gray-700 mb-2">
										Email Address *
									</label>
									<input
										type="email"
										id="email"
										name="email"
										required
										class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition"
										placeholder="john@example.com"
									/>
								</div>

								<div>
									<label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
										Phone Number
									</label>
									<input
										type="tel"
										id="phone"
										name="phone"
										class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition"
										placeholder="(619) 555-1234"
									/>
								</div>

								<div>
									<label for="location" class="block text-sm font-medium text-gray-700 mb-2">
										Property Location *
									</label>
									<select
										id="location"
										name="location"
										required
										class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition"
									>
										<option value="">Select a neighborhood</option>
										<option value="la-jolla">La Jolla</option>
										<option value="pacific-beach">Pacific Beach</option>
										<option value="downtown">Downtown San Diego</option>
										<option value="coronado">Coronado</option>
										<option value="mission-beach">Mission Beach</option>
										<option value="north-park">North Park</option>
										<option value="ocean-beach">Ocean Beach</option>
										<option value="point-loma">Point Loma</option>
										<option value="other">Other San Diego Area</option>
									</select>
								</div>

								<div>
									<label for="property-type" class="block text-sm font-medium text-gray-700 mb-2">
										Property Type
									</label>
									<select
										id="property-type"
										name="property-type"
										class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition"
									>
										<option value="">Select property type</option>
										<option value="house">Single Family Home</option>
										<option value="condo">Condo/Apartment</option>
										<option value="townhouse">Townhouse</option>
										<option value="multiple">Multiple Properties</option>
									</select>
								</div>

								<div>
									<label for="message" class="block text-sm font-medium text-gray-700 mb-2">
										Tell Us About Your Property *
									</label>
									<textarea
										id="message"
										name="message"
										required
										rows="4"
										class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent outline-none transition resize-none"
										placeholder="Number of bedrooms, current status (rented/vacant), any specific questions..."
									></textarea>
								</div>

								<button
									type="submit"
									class="w-full px-8 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow-lg hover:shadow-xl"
								>
									Get Free Consultation
								</button>

								<p class="text-sm text-gray-600 text-center">
									We'll respond within 24 hours with a customized property analysis
								</p>
							</form>
						</div>
					</div>

					<!-- Contact Information -->
					<div>
						<div class="mb-8">
							<h2 class="text-2xl font-bold text-gray-900 mb-6">Get In Touch</h2>
							<p class="text-gray-600 mb-8">
								Prefer to talk? We're here to answer your questions and provide a free, no-obligation consultation about your San Diego rental property.
							</p>

							<div class="space-y-6">
								<!-- Phone -->
								<div class="flex items-start gap-4">
									<div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
										<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
										</svg>
									</div>
									<div>
										<h3 class="font-semibold text-gray-900 mb-1">Phone</h3>
										<a href="tel:+19517600070" class="text-blue-600 hover:text-blue-700 text-lg">
											(951) 760-0070
										</a>
										<p class="text-sm text-gray-600 mt-1">Mon-Fri: 8am-6pm PST</p>
									</div>
								</div>

								<!-- Email -->
								<div class="flex items-start gap-4">
									<div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
										<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
										</svg>
									</div>
									<div>
										<h3 class="font-semibold text-gray-900 mb-1">Email</h3>
										<a href="mailto:info@sandiegorentals.com" class="text-blue-600 hover:text-blue-700 text-lg">
											info@sandiegorentals.com
										</a>
										<p class="text-sm text-gray-600 mt-1">We respond within 24 hours</p>
									</div>
								</div>

								<!-- Address -->
								<div class="flex items-start gap-4">
									<div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
										<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
										</svg>
									</div>
									<div>
										<h3 class="font-semibold text-gray-900 mb-1">Office</h3>
										<p class="text-gray-600">
											Downtown San Diego<br/>
											San Diego, CA 92101
										</p>
									</div>
								</div>
							</div>
						</div>

						<!-- What to Expect -->
						<div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-8">
							<h3 class="text-xl font-bold text-gray-900 mb-4">What to Expect</h3>
							<div class="space-y-4">
								<div class="flex gap-3">
									<svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<div>
										<p class="font-semibold text-gray-900">15-Minute Discovery Call</p>
										<p class="text-sm text-gray-700">Quick discussion about your property and goals</p>
									</div>
								</div>
								<div class="flex gap-3">
									<svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<div>
										<p class="font-semibold text-gray-900">Market Analysis</p>
										<p class="text-sm text-gray-700">Custom revenue potential report for your area</p>
									</div>
								</div>
								<div class="flex gap-3">
									<svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<div>
										<p class="font-semibold text-gray-900">Personalized Strategy</p>
										<p class="text-sm text-gray-700">Tailored management plan and pricing approach</p>
									</div>
								</div>
								<div class="flex gap-3">
									<svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
									</svg>
									<div>
										<p class="font-semibold text-gray-900">No Obligation</p>
										<p class="text-sm text-gray-700">Free consultation with no pressure to commit</p>
									</div>
								</div>
							</div>
						</div>

						<!-- FAQ Quick Links -->
						<div class="mt-8 bg-white border border-gray-200 rounded-xl p-6">
							<h3 class="font-bold text-gray-900 mb-4">Common Questions</h3>
							<ul class="space-y-3 text-sm">
								<li>
									<a href="/services" class="text-blue-600 hover:text-blue-700 flex items-center gap-2">
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
										</svg>
										What services are included?
									</a>
								</li>
								<li>
									<a href="/locations" class="text-blue-600 hover:text-blue-700 flex items-center gap-2">
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
										</svg>
										Do you manage properties in my area?
									</a>
								</li>
								<li>
									<a href="/about" class="text-blue-600 hover:text-blue-700 flex items-center gap-2">
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
										</svg>
										How do you optimize pricing?
									</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Service Areas Banner -->
	<section class="py-12 bg-gray-50">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center">
				<h3 class="text-xl font-bold text-gray-900 mb-4">Serving All of San Diego County</h3>
				<p class="text-gray-600 max-w-4xl mx-auto">
					La Jolla • Pacific Beach • Downtown • Coronado • Mission Beach • North Park • Ocean Beach • Point Loma • Del Mar • Encinitas • Gaslamp Quarter • Little Italy • Hillcrest • South Park • And More
				</p>
			</div>
		</div>
	</section>

	<Footer />

	<script>
		const form = document.getElementById('contact-form');

		form?.addEventListener('submit', async (e) => {
			e.preventDefault();

			const formData = new FormData(form as HTMLFormElement);
			const data = Object.fromEntries(formData);

			// Here you would normally send to your backend or form service
			// For now, we'll just show an alert
			alert('Thank you for your inquiry! We\'ll contact you within 24 hours with a customized property analysis.');

			// Reset form
			(form as HTMLFormElement).reset();
		});
	</script>
</Layout>
