	<!-- Related Services -->
	<RelatedPages
		title="Related Services"
		pages={relatedServices}
	/>

	<!-- FAQ Section -->
	<FAQ
		title="Frequently Asked Questions"
		subtitle="Everything you need to know about roofing SEO"
		faqs={faqs.filter(faq => faq.question)}
	/>

