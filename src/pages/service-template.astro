			icon: "document"
		},
		{
			heading: "Feature Six",
			description: "Description of feature six and how it benefits the client.",
			icon: "chart"
		}
	]
};

// How It Works Section (Optional - set to null to hide)
const howItWorksSection = {
	title: "How It Works",
	steps: [
		{
			number: "1",
			heading: "Step One",
			description: "Description of the first step in the process."
		},
		{
			number: "2",
			heading: "Step Two",
			description: "Description of the second step in the process."
		},
		{
			number: "3",
			heading: "Step Three",
			description: "Description of the third step in the process."
		},
		{
			number: "4",
			heading: "Step Four",
			description: "Description of the fourth step in the process."
		}
	]
};
// Set to null to hide this section: const howItWorksSection = null;

// Related Services
const relatedServices = [
	{
		title: "Related Service One",
		description: "Brief description of related service",
		link: "/services/service-one",
		icon: "services"
	},
	{
		title: "Related Service Two",
		description: "Brief description of related service",
		link: "/services/service-two",
		icon: "services"
	},
	{
		title: "All Services",
		description: "View all our services",
		link: "/services",
		icon: "services"
	}
];

// FAQ Section
const faqs = [
	{
		question: "Question one?",
		answer: "Answer to question one."
	},
	{
		question: "Question two?",
		answer: "Answer to question two."
	},
	{
		question: "Question three?",
		answer: "Answer to question three."
	},
	{
		question: "Question four?",
		answer: "Answer to question four."
	},
	{
		question: "Question five?",
		answer: "Answer to question five."
	}
];

// CTA Banner
const ctaBanner = {
	title: "Ready to Get Started?",
	subtitle: "Get a free consultation and see how we can help",
	primaryButton: {
		text: "Get Free Consultation",
		link: "/contact"
	},
	secondaryButton: {
		text: "Call (951) 760-0070",
		link: "tel:+19517600070"
	},
	backgroundColor: "black" // Options: "black", "orange"
};
---

<Layout title={pageTitle} description={pageDescription}>
	<Header />

	<!-- Hero Section -->
	<section class="relative min-h-[70vh] flex items-center bg-cover bg-center"
		style={`background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('${hero.backgroundImage}');`}>
		<div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<div class="max-w-4xl">
				<h1 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
					{hero.title}<br/><span class="text-orange-600">{hero.titleHighlight}</span>
				</h1>
				<div class="w-24 h-1 bg-orange-600 mb-8"></div>
				<p class="text-xl md:text-2xl text-gray-200 mb-12 leading-relaxed">
					{hero.description}
				</p>
				<div class="flex flex-wrap gap-4">
					<a href={hero.primaryButton.link} class="btn-primary px-8 py-4 text-lg font-bold uppercase tracking-wider border-2 transition-all hover:bg-white hover:text-orange-600">
						{hero.primaryButton.text}
					</a>
					<a href={hero.secondaryButton.link} class="bg-transparent border-2 border-white text-white px-8 py-4 text-lg font-bold uppercase tracking-wider transition-all hover:bg-white hover:text-black">
						{hero.secondaryButton.text}
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Trust Signals -->
	<TrustSignals stats={trustStats} />

	<!-- Traditional Text Content Section (Optional) -->
	{textContentSection && (
		<section class="py-20 bg-white">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="max-w-4xl mx-auto">
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
							{textContentSection.title}<br/><span class="text-orange-600">{textContentSection.titleHighlight}</span>
						</h2>
						<div class="w-24 h-1 bg-orange-600 mx-auto mb-6"></div>
					</div>

					<div class="prose prose-lg max-w-none text-gray-600">
						{textContentSection.paragraphs.map((paragraph) => (
							<p class="text-base md:text-lg mb-6 leading-relaxed">
								{paragraph}
							</p>
						))}
					</div>
				</div>
			</div>
		</section>
	)}

	<!-- Features/What's Included Section -->
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
					{featuresSection.title}<br/><span class="text-orange-600">{featuresSection.titleHighlight}</span>
				</h2>
				<div class="w-24 h-1 bg-orange-600 mx-auto mb-6"></div>
				<p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
					{featuresSection.subtitle}
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{featuresSection.features.map((feature) => (
					<div class="card p-8">
						<div class="w-16 h-16 bg-orange-600 flex items-center justify-center mb-6">
							{feature.icon === "dollar" && (
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							)}
							{feature.icon === "calendar" && (
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
								</svg>
							)}
							{feature.icon === "lightbulb" && (
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
								</svg>
							)}
							{feature.icon === "settings" && (
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
								</svg>
							)}
							{feature.icon === "document" && (
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
								</svg>
							)}
							{feature.icon === "chart" && (
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
								</svg>
							)}
						</div>
						<h3 class="text-xl md:text-2xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{feature.heading}</h3>
						<p class="text-base md:text-lg text-gray-600 leading-relaxed">
							{feature.description}
						</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- How It Works Section (Optional) -->
	{howItWorksSection && (
		<section class="py-20 bg-gray-50">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-3xl md:text-4xl font-bold text-black mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
						{howItWorksSection.title}
					</h2>
					<div class="w-24 h-1 bg-orange-600 mx-auto mb-6"></div>
				</div>

				<div class="max-w-4xl mx-auto">
					<div class="space-y-8">
						{howItWorksSection.steps.map((step) => (
							<div class="flex gap-6">
								<div class="flex-shrink-0">
									<div class="w-16 h-16 bg-orange-600 flex items-center justify-center text-white text-3xl font-bold" style="font-family: 'Bebas Neue', sans-serif;">{step.number}</div>
								</div>
								<div>
									<h3 class="text-xl md:text-2xl font-bold text-black mb-3 uppercase" style="font-family: 'Bebas Neue', sans-serif;">{step.heading}</h3>
									<p class="text-base md:text-lg text-gray-600 leading-relaxed">
										{step.description}
									</p>
								</div>
							</div>
						))}
					</div>
				</div>
			</div>
		</section>
	)}

	<!-- Related Services -->
	<RelatedPages
		title="Related Services"
		pages={relatedServices}
	/>

	<!-- FAQ Section -->
	<FAQ
		title="Frequently Asked Questions"
		subtitle="Everything you need to know about this service"
		faqs={faqs}
	/>

	<!-- CTA Banner -->
	<CTABanner
		backgroundColor={ctaBanner.backgroundColor}
		title={ctaBanner.title}
		subtitle={ctaBanner.subtitle}
		primaryButtonText={ctaBanner.primaryButton.text}
		primaryButtonLink={ctaBanner.primaryButton.link}
		secondaryButtonText={ctaBanner.secondaryButton.text}
		secondaryButtonLink={ctaBanner.secondaryButton.link}
	/>

	<Footer />
</Layout>

