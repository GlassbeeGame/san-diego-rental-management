---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TrustSignals from '../components/TrustSignals.astro';
import RelatedPages from '../components/RelatedPages.astro';
import FAQ from '../components/FAQ.astro';
import CTABanner from '../components/CTABanner.astro';

// Example data - replace with your actual content
const faqs = [
	{
		question: "What areas of San Diego do you serve?",
		answer: "We serve all major San Diego neighborhoods including La Jolla, Pacific Beach, Downtown, Coronado, Mission Beach, North Park, Ocean Beach, and the Gaslamp Quarter. Our localized expertise ensures maximum rental income in your specific area."
	},
	{
		question: "How much do your management services cost?",
		answer: "Our pricing is flexible and based on your specific needs. We offer competitive rates with no hidden fees. Contact us for a free consultation and customized quote based on your property and management requirements."
	},
	{
		question: "What makes you different from other property managers?",
		answer: "We focus on data-driven pricing strategies, localized San Diego market expertise, and personalized service. Unlike one-size-fits-all competitors, we tailor our approach to your property's unique characteristics and your specific goals."
	},
	{
		question: "How quickly can you start managing my property?",
		answer: "We can typically onboard new properties within 7-10 days. This includes professional photography, listing optimization, pricing strategy setup, and coordination with cleaning and maintenance teams."
	},
	{
		question: "Do you handle maintenance and repairs?",
		answer: "Yes! We have a network of trusted local contractors and vendors. We handle all maintenance requests, coordinate repairs, and ensure your property stays in excellent condition with regular inspections."
	}
];

const relatedPages = [
	{
		title: "Our Services",
		description: "Explore our comprehensive property management solutions",
		link: "/services",
		icon: "services"
	},
	{
		title: "Service Areas",
		description: "See all San Diego neighborhoods we serve",
		link: "/locations",
		icon: "locations"
	},
	{
		title: "Contact Us",
		description: "Get your free consultation and quote",
		link: "/contact",
		icon: "contact"
	}
];
---

<Layout
	title="Page Template | Polaris Rental Group"
	description="This is a template page showing all reusable components."
>
	<Header />

	<!-- Hero Section with Background Image -->
	<section class="relative pt-48 pb-32 bg-cover bg-center" style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=1920');">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl text-white">
				<h1 class="text-6xl md:text-7xl lg:text-8xl font-bold mb-6 uppercase leading-tight" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
					Page Template<br/>
					<span class="text-orange-600">Example</span>
				</h1>
				<div class="w-24 h-1 bg-orange-600 mb-8"></div>
				<p class="text-2xl text-gray-200 leading-relaxed max-w-2xl">
					This is a template page showcasing all reusable components. Use this structure for creating new pages with consistent design.
				</p>
			</div>
		</div>
	</section>

	<!-- Trust Signals Component -->
	<TrustSignals
		title="Trusted by San Diego Property Owners"
		subtitle="Our proven track record of success"
		backgroundColor="white"
		stats={[
			{ value: "150+", label: "Properties Managed", icon: "properties" },
			{ value: "4.9â˜…", label: "Average Rating", icon: "rating" },
			{ value: "35%", label: "Revenue Increase", icon: "revenue" },
			{ value: "82%", label: "Occupancy Rate", icon: "occupancy" }
		]}
	/>

	<!-- Main Content Area -->
	<section class="py-20 md:py-28 bg-gray-50">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="max-w-4xl mx-auto">
				<div class="mb-16">
					<div class="inline-block px-4 py-2 bg-orange-600 text-white text-xs font-bold uppercase tracking-widest mb-6">
						Main Content
					</div>
					<h2 class="text-5xl md:text-6xl font-bold text-gray-900 mb-8 uppercase" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em;">
						Your Content Section Title
					</h2>
					<p class="text-xl text-gray-600 mb-8 leading-relaxed">
						This is where your main page content goes. You can add multiple paragraphs, images, lists, and other content here. The template provides a clean, professional layout that matches your site's bold industrial aesthetic.
					</p>
				</div>

				<!-- Example Content Grid -->
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
					<div class="card p-8">
						<div class="w-14 h-14 bg-black flex items-center justify-center mb-6">
							<svg class="w-7 h-7 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-gray-900 mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
							Feature One
						</h3>
						<p class="text-gray-600 leading-relaxed">
							Add your content here. Use the card component for highlighting important features or benefits.
						</p>
					</div>

					<div class="card p-8">
						<div class="w-14 h-14 bg-black flex items-center justify-center mb-6">
							<svg class="w-7 h-7 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-gray-900 mb-4 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
							Feature Two
						</h3>
						<p class="text-gray-600 leading-relaxed">
							The card class provides consistent styling with 2px borders and hover effects that change to orange.
						</p>
					</div>
				</div>

				<!-- Example List Content -->
				<div class="bg-white p-8 md:p-12 border-l-4 border-orange-600">
					<h3 class="text-3xl font-bold text-gray-900 mb-6 uppercase" style="font-family: 'Bebas Neue', sans-serif;">
						Key Points
					</h3>
					<ul class="space-y-4">
						<li class="flex items-start gap-3">
							<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
							</svg>
							<span class="text-gray-700 leading-relaxed">
								Use checkmarks for lists of features or benefits
							</span>
						</li>
						<li class="flex items-start gap-3">
							<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
							</svg>
							<span class="text-gray-700 leading-relaxed">
								Maintain consistent spacing and typography throughout
							</span>
						</li>
						<li class="flex items-start gap-3">
							<svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
							</svg>
							<span class="text-gray-700 leading-relaxed">
								Keep the bold, industrial aesthetic with Bebas Neue headings
							</span>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

	<!-- Related Pages Component -->
	<RelatedPages
		title="Explore More"
		pages={relatedPages}
	/>

	<!-- FAQ Component -->
	<FAQ
		title="Frequently Asked Questions"
		subtitle="Get answers to common questions about our services"
		faqs={faqs}
	/>

	<!-- CTA Banner Component -->
	<CTABanner
		title="Ready to Get Started?"
		subtitle="Contact us today for a free consultation and property evaluation"
		backgroundColor="orange"
		primaryButtonText="Get Free Consultation"
		primaryButtonLink="/contact"
		secondaryButtonText="Call (951) 760-0070"
		secondaryButtonLink="tel:+19517600070"
	/>

	<Footer />
</Layout>
