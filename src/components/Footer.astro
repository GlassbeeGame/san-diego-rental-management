      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-white mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-sm text-gray-400 hover:text-white">Home</a></li>
          <li><a href="/services" class="text-sm text-gray-400 hover:text-white">Services</a></li>
          <li><a href="/locations" class="text-sm text-gray-400 hover:text-white">Locations</a></li>
          <li><a href="/about" class="text-sm text-gray-400 hover:text-white">About</a></li>
